<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_page_5">

    <ImageView
        android:id="@+id/right_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="350dp"
        />

    <TextView
        android:id="@+id/shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="23dp"
        android:text="shop name"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/search_view"
        android:backgroundTint="#EAEAEA"
        />

    <ImageView
        android:id="@+id/image_j"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image_j"
        android:layout_marginTop="150dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/image_j_2"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image_j"
        android:layout_marginTop="350dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="220dp"/>

    <ImageView
        android:id="@+id/image_t"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image_t"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="220dp"/>

    <ImageView
        android:id="@+id/image_d"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image_d"
        android:layout_marginTop="350dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/image_t_2"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image_t"
        android:layout_marginTop="530dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/image_d_2"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/image_d"
        android:layout_marginTop="530dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="220dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>