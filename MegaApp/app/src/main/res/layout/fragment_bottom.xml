<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottomFragment">

   <ImageView
       android:id="@+id/image_like"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/like"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="75dp"
       />

   <TextView
       android:id="@+id/text_bottom"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/image_like"
       android:text="Registration completed"
       android:layout_marginTop="26dp"
       android:gravity="center"
       android:textSize="24dp"
       android:textStyle="bold"
       android:textColor="@color/black"
       />

   <Button
       android:id="@+id/got_it"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/text_bottom"
       android:layout_marginTop="40dp"
       android:layout_marginLeft="50dp"
       android:layout_marginRight="50dp"
       android:background="@drawable/fragment_round"
       android:text="Got it"
       android:textSize="24dp"

       />

</androidx.constraintlayout.widget.ConstraintLayout>